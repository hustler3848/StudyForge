
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and update their own profile and private data
    match /users/{userId}/{document=**} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Community rooms are public to read for any authenticated user
    // and can be created or updated by any authenticated user.
    match /communityRooms/{roomId} {
      allow read, create: if request.auth != null;
      // Only allow updating member count, not other fields by default
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberCount']);
    }

    // Members can join a room (create their own member doc)
    // and anyone authenticated can read the member list for leaderboards
    match /communityRooms/{roomId}/members/{userId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == userId;
    }
    
    // Daily challenges can be read by any authenticated user
    match /communityRooms/{roomId}/challenges/{challengeId} {
      allow read: if request.auth != null;
      // Challenges can be created (e.g., by a server process or the first user of the day)
      allow create: if request.auth != null;
    }

    // Users can create their own answers
    // Answers can be read by any authenticated user in the room
    match /communityRooms/{roomId}/challenges/{challengeId}/answers/{answerId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
